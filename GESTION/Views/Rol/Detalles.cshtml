@model GESTION.Models.Rol

@{
    ViewBag.Title = "Detalles del Rol";
}

<h2>Detalles del Rol</h2>

<div>
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>@Model.Id</dd>

        <dt>Nombre</dt>
        <dd>@Model.Nombres</dd>

        <dt>Descripción</dt>
        <dd>@Model.Descripcion</dd>

        <dt>Creado el</dt>
        <dd>@Model.Creado_El.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Editar", "Editar", new { id = Model.Id }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Volver", "Rol", null, new { @class = "btn btn-default" })
</p>
