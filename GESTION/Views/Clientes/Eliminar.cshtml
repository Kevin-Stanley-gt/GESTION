@model GESTION.Models.Clientes

@{
    ViewBag.Title = "Eliminar Cliente";
}

<h2>Eliminar Cliente</h2>

<div class="alert alert-warning">
    ¿Está seguro de que desea eliminar al cliente
    <strong>@Model.Nombre</strong> (NIT: @Model.Nit)?
</div>

@using (Html.BeginForm("Eliminar", "Clientes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <button type="submit" class="btn btn-danger">Eliminar</button>
    @Html.ActionLink("Cancelar", "Clientes", null, new { @class = "btn btn-secondary ms-2" })
}
