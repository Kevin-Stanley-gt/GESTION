@{
    ViewBag.Title = "Dashboard Power BI";
    var embedUrl = ViewBag.PowerBIEmbedUrl as string;
}

<div class="container-fluid">
    <center><h1 class="mt-4">Dashboard General </h1></center>

    <div class="card mb-2 shadow-sm">
        <div class="card-body p-0" style="height:80vh;">
            @if (!string.IsNullOrEmpty(embedUrl))
            {
                <iframe src="@embedUrl"
                        width="1400"
                        height="800"
                        frameborder="0"
                        allowfullscreen>
                </iframe>
            }
            else
            {
                <div class="alert alert-warning m-3">
                    No se ha configurado la URL de Power BI embed.
                </div>
            }
        </div>
    </div>
</div>
