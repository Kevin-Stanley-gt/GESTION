<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - POS FARMATODO</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- Tu hoja de estilos personalizada (si la tienes) -->

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm mb-4">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-primary" href="#">SISTEMAS</a>

            @if (Session["Usuario"] != null)
            {
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Productos -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-box"></i> Productos
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Productos")"><i class="fas fa-boxes"></i> Productos</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Proveedores")"><i class="fas fa-truck"></i> Proveedores</a></li>
                            </ul>
                        </li>

                        <!-- Compras -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-cart-plus"></i> Compras
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("NuevaCompra", "Compras")"><i class="fas fa-plus-circle"></i> Nueva Compra</a></li>
                            </ul>
                        </li>

                        <!-- Ventas -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-cash-register"></i> Ventas
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("NuevaVenta", "Ventas")"><i class="fas fa-shopping-cart"></i> Nueva Venta</a></li>
                            </ul>
                        </li>

                        <!-- Usuarios (solo para Administrador) -->
                        @if (Session["Rol"] != null && Session["Rol"].ToString() == "1")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-users-cog"></i> Usuarios
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Usuarios", "Usuario")"><i class="fas fa-user-plus"></i> Usuarios</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Rol", "Rol")"><i class="fas fa-user-shield"></i> Roles</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Cerrar sesión -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="@Url.Action("CerrarSesion", "Login")">
                                <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                             </a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </nav>

    <div class="container">
        @RenderBody()
        <hr />
        <footer class="text-center text-muted mb-3">
            &copy; @DateTime.Now.Year - Kevin S. Sabin
        </footer>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
