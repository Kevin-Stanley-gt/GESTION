@model GESTION.Models.Usuarios

@{
    ViewBag.Title = "Editar Usuario";
}

<h2>Editar Usuario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Rol_Id, "Rol", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(m => m.Rol_Id, (List<SelectListItem>)ViewBag.Roles, "Seleccione un rol", new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Apellidos)
            @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Usuario)
            @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Pw, "Contraseña")
            @Html.PasswordFor(m => m.Pw, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            @Html.ActionLink("Cancelar", "Usuarios", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}
