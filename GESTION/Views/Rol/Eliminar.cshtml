@model GESTION.Models.Rol

@{
    ViewBag.Title = "Eliminar Rol";
}

<h2>¿Está seguro de que desea eliminar este rol?</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Nombre</dt>
        <dd>@Model.Nombres</dd>

        <dt>Descripción</dt>
        <dd>@Model.Descripcion</dd>

        <dt>Creado el</dt>
        <dd>@Model.Creado_El.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>

    @using (Html.BeginForm("Eliminar", "Rol", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <input type="submit" value="Eliminar" class="btn btn-danger" />
        @Html.ActionLink("Cancelar", "Rol", null, new { @class = "btn btn-default" })
    }
</div>
