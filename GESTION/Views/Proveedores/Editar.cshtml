@model GESTION.Models.Proveedores

@{
    ViewBag.Title = "Editar Proveedores";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(P => P.Id)

<div class="form-horizontal">
    <hr />
    <div class="form-group">
        @Html.LabelFor(P => P.Nombre)
        @Html.TextBoxFor(P => P.Nombre, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(P => P.Direccion)
        @Html.TextBoxFor(P => P.Direccion, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(P => P.Telefono)
        @Html.TextBoxFor(P => P.Telefono, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(P => P.Razon_Social)
        @Html.TextBoxFor(P => P.Razon_Social, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(P => P.Moneda_Id, "Moneda", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(P => P.Moneda_Id, (List<SelectListItem>)ViewBag.Monedas, "Seleccione Moneda", new { @class = "form-control" })
    </div>



    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        @Html.ActionLink("Cancelar", "Proveedores", null, new { @class = "btn btn-secondary" })
    </div>
</div>
}
