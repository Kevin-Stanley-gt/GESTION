@model GESTION.Models.Productos

@{
    ViewBag.Title = "Editar Producto";
}

<h2>Editar Producto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Proveedor_Id, "Proveedor")
        @Html.DropDownListFor(model => model.Proveedor_Id, (IEnumerable<SelectListItem>)ViewBag.Proveedores, "-- Seleccione Proveedor --", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Proveedor_Id)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Marca_Id, "Marca")
        @Html.DropDownListFor(model => model.Marca_Id, (IEnumerable<SelectListItem>)ViewBag.Marca, "-- Seleccione Marca --", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Marca_Id)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre)
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nombre)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion)
        @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", rows = 3 })
        @Html.ValidationMessageFor(model => model.Descripcion)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Costo)
        @Html.TextBoxFor(model => model.Costo, new { @class = "form-control", type = "number", step = "0.01" })
        @Html.ValidationMessageFor(model => model.Costo)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Barras)
        @Html.TextBoxFor(model => model.Barras, new { @class = "form-control"})
        @Html.ValidationMessageFor(model => model.Barras)
    </div>

    <div class="form-group form-check">
        @Html.CheckBoxFor(model => model.Activo, new { @class = "form-check-input" })
        @Html.LabelFor(model => model.Activo, new { @class = "form-check-label" })
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    @Html.ActionLink("Cancelar", "Productos", null, new { @class = "btn btn-secondary ml-2" })
}
